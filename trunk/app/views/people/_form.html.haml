%fieldset
  %legend="Person"
  - form_for @person do |form|
    %p
      %label="First Name"
      %br/
      = form.text_field :first_name
    %p
      %label="Middle Name"
      %br/
      = form.text_field :middle_name
    %p
      %label="Last Name"
      %br/
      = form.text_field :last_name
    %p
      %label="Prefix"
      %br/
      = form.text_field :prefix
    %p
      %label="Suffix"
      %br/
      = form.text_field :suffix
    %p
      %label="Image URL"
      %br/
      = form.text_field :image_url
    %p
      %label="Phone"
      %br/
      = form.text_field :phone
    %p
      %label="Email"
      %br/
      = form.text_field :email
    %p
      %label="IM"
      %br/
      = form.text_field :im
    %p
      %label="Office Address Line One"
      %br/
      = form.text_field :office_address_line_one
    %p
      %label="Office Address Line Two"
      %br/
      = form.text_field :office_address_line_two
    %p
      %label="Office City"
      %br/
      = form.text_field :office_city
    %p
      %label="Office State"
      %br/
      = form.text_field :office_state
    %p
      %label="Office Zip"
      %br/
      = form.text_field :office_zip
    %p
      %label="Research Focus"
      %br/
      = form.text_area :research_focus
    %p
      %label="Active"
      %br/
      = form.check_box :active
    %p.submit
      = submit_tag :save