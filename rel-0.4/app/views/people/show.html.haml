%div{:class => "column span-24"}
  %h2= @person.first_last
  %p= @person.research_focus

  %div{:class => "column span-16"}
    %h3="Citations (#{@citations.total_entries})"
    = will_paginate @citations
    %ol.citations
      - @citations.each do |citation|
        = render :partial => "shared/citation", :locals => {:citation => citation}

  %div{:class => "column span-6 prepend-2 last"}
    %h3="Groups (#{@person.groups.size})"
    %ol.groups-alphabetical
      - @person.groups.each do |g|
        %li=link_to "#{g.name}", group_path(g)

    %h3="Authors (#{@person.authors.size})"
    %ol.authors-alphabetical
      - @person.authors.each do |a|
        %li=link_to "#{a.name}", author_path(a)