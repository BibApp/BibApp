- form_tag advanced_search_path, :method => :get do

  %fieldset.span-17.prepend-2
    %legend Advanced Search
    %div.span-17
      .span-8
        %label.span-4 Keywords
        %p Return items with these words appearing anywhere
      
      = text_field_tag(:keywords, value = nil, options = {:size => 40})
      %p=$SEARCH_EXAMPLES[:keywords]

    %div.span-17        
      .span-8
        %label.span-4 Title
        %p Return items with these words in the title
      = text_field_tag(:title, value = nil, options = {:size => 40})
      %p=$SEARCH_EXAMPLES[:title]
    
    %div.span-17        
      .span-8
        %label.span-4 Authors
        %p Return items by author
      = text_field_tag(:authors, value = nil, options = {:size => 40})
      %p=$SEARCH_EXAMPLES[:authors]
      
    %div.span-17        
      .span-8
        %label.span-4 Groups
        %p Return items by groups
      = text_field_tag(:groups, value = nil, options = {:size => 40})
      %p=$SEARCH_EXAMPLES[:groups]
        
    %div.span-17        
      .span-8
        %label.span-4 ISSN or ISBN
        %p Return item associated with the standard number
      = text_field_tag(:issn_isbn, value = nil, options = {:size => 40})
      %p=$SEARCH_EXAMPLES[:issn_isbn]
      
    %div.span-17        
      .span-8
        %label.span-4 Year
        %p Return only items published from
      = text_field_tag(:start_date, value = nil, options = {:size => 4})
      &nbsp; to &nbsp; 
      = text_field_tag(:end_date, value = nil, option = {:size => 4})
      %p=$SEARCH_EXAMPLES[:year]
      
    %div.span-17        
      .span-8
        &nbsp;
      = submit_tag 'Search'