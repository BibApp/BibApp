!!! XML
%works
  -@works.each do |w|
    -work = Work.find(w['pk_i'])
    %work{:type => work.type, :id => work.id}
      %link{:href => "#{work_url(work.id)}.xml"}
  -if @has_next_page
    -@page = @page == 0 ? 1 : @page
    %link{:rel => "next", :href => "#{search_url()}?q=#{@query}&format=xml&page=#{@page.to_i+1}"}