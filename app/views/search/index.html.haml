.span-24
  .span-22.prepend-1
    - if @q.nil?
      %h2 Search
      .span-20.prepend-1
        = render "advanced_search_form"
    - else
      %h2
        -if @query == "*:*"
          ="#{pluralize(@q.total_hits, "Result", "Results")}"
        -else
          ="#{pluralize(@q.total_hits, "Result", "Results")} for:"
          %strong=" #{@query}"

      -if @spelling_suggestions.present? and !@q.total_hits == 0
        %p.warning.span-22
          = render 'spelling_suggestions'

      -if @q.total_hits == 0
        = render 'no_hits'
      - else
        = render "shared/people", :count => 10, :randomize => false
        = render "shared/groups", :count => 10
        #results.span-22
          = render "shared/facets"
          = render "shared/works"