= render :layout => 'works/layouts/edit_form',
  :locals => {:form => form, :klass => PresentationLecture} do
  %li
    = render 'works/forms/fields/author_name_strings'
  %li
    = render 'works/forms/fields/title_primary', :form => form
  %li
    = render 'works/forms/fields/title_secondary', :form => form, :label => PresentationLecture.human_attribute_name(:title_secondary)
  %li
    = render 'works/forms/fields/title_tertiary', :form => form
  %li
    = render 'works/forms/fields/date_range', :form => form
  %li
    = render 'works/forms/fields/location', :form => form, :label => PresentationLecture.human_attribute_name(:location)
  %li
    = render 'works/forms/fields/publication_date', :label => PresentationLecture.human_attribute_name(:publication_date)
  %li
    = render 'works/forms/fields/language', :form => form
  %li
    = render 'works/forms/fields/keywords'
  %li
    = render 'works/forms/fields/abstract', :form => form
  %li
    = render 'works/forms/fields/copyright_holder', :form => form
  %li
    = render 'works/forms/fields/sponsor', :form => form
  %li
    = render 'works/forms/fields/links', :form => form
  %li
    = render 'works/forms/fields/notes', :form => form
