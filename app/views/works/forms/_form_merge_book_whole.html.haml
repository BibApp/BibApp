%table#accepted_work.span-22
  %tr
    %td.span-8.duplicate
      %h3 Duplicate work
    %td.span-12
      %h3 Accepted work
  %tr#title_primary
    = render :partial => 'works/forms/fields/merge_title_primary', :locals => {:label => "Article/Chapter Title", :form => form}
  %tr#authors
    = render :partial => 'works/forms/fields/merge_author_name_strings'
  %tr#editors
    = render :partial => 'works/forms/fields/merge_editor_name_strings'
  %tr#publication_date
    = render :partial => 'works/forms/fields/merge_publication_date'
  %tr#isbn_issn
    = render :partial => 'works/forms/fields/merge_issn_isbn', :locals => {:isbn => true}
  %tr#publisher
    = render :partial => 'works/forms/fields/merge_publisher'
  - if current_user.has_role?("admin", System)
    %tr#keywords
      = render :partial => 'works/forms/fields/merge_keywords'
  %tr#abstract
    = render :partial => 'works/forms/fields/merge_abstract', :locals => {:form => form}


= hidden_field_tag :type, 'BookWhole'
= render :partial => 'works/forms/fields/form_buttons', :locals => {:form => form}