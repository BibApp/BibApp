%table#accepted_work.span-22
  %tr
    %td.span-8.duplicate
      %h3 Duplicate work
    %td.span-12
      %h3 Accepted work
  %tr#title_primary
    = render :partial => 'works/forms/fields/merge_title_primary', :locals => {:form => form}
  %tr#title_secondary
    = render :partial => 'works/forms/fields/merge_title_secondary', :locals => {:form => form}
  %tr#authors
    = render :partial => 'works/forms/fields/merge_author_name_strings'
  %tr#publication_date
    = render :partial => 'works/forms/fields/merge_publication_date'
  %tr#publication
    = render :partial => 'works/forms/fields/merge_publication'
  %tr#publisher
    = render :partial => 'works/forms/fields/merge_publisher'
  %tr#isbn_issn
    = render :partial => 'works/forms/fields/merge_issn_isbn'
  %tr#volume_issue
    = render :partial => 'works/forms/fields/merge_volume_issue', :locals => {:form => form}
  %tr#pages
    = render :partial => 'works/forms/fields/merge_pages', :locals => {:form => form}

  - if current_user.has_role?("admin", System)
    %tr#keywords
      = render :partial => 'works/forms/fields/merge_keywords'
  %tr#abstract
    = render :partial => 'works/forms/fields/merge_abstract', :locals => {:form => form}

= hidden_field_tag :type, 'Generic'
= render :partial => 'works/forms/fields/form_buttons', :locals => {:form => form}