-# Volume & Issue fields
-#
-# Possible Input Variables:
-#    :omit_volume => if true, Volume omitted
-#    :form        => current form (REQUIRED)
-#    :label       => Label for Issue (default: Issue)

-# Initialize optional input variables
- label ||= Work.human_attribute_name(:issue)
- omit_volume ||= false

- unless omit_volume
  = form.label :volume, "#{Work.human_attribute_name(:volume)}:", :class => 'inline_label'
  = form.text_field :volume, :class=>'text smallbox'

= form.label :issue, "#{label}:", :class => 'inline_label'
= form.text_field :issue, :class=>'text smallbox'
