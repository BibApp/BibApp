= render :layout => 'works/layouts/edit_form', :locals => {:form => form, :klass => Patent} do
  %li
    = render 'works/forms/fields/author_name_strings'
  %li
    = render 'works/forms/fields/title_primary', :form => form
  %li
    = render 'works/forms/fields/date_range', :form => form, :label => Patent.human_attribute_name(:date_range)
  %li
    = render 'works/forms/fields/publication_date', :label => Patent.human_attribute_name(:publication_date)
  %li
    = render 'works/forms/fields/keywords'
  %li
    = render 'works/forms/fields/abstract', :form => form
  %li
    = render 'works/forms/fields/links', :form => form
  %li
    = render 'works/forms/fields/identifier', :form => form, :label => Patent.human_attribute_name(:identifier)
  %li
    = render 'works/forms/fields/notes', :form => form
