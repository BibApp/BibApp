/ Authors
- if !c.name_strings.author.empty?
  %span.authors
    - authors = Array.new
    - c.name_strings.author.each do |ns|
      - authors << ns.name
    - if authors.size > 5
      - authors = authors.first(6) << "et al."
    = authors.join(", ")

/ Year
-if c.publication_date != nil
  %span.year="(#{c.publication_date.year}). "
  
/ Title
%span.title="#{c.title_primary}. "

/ Publication
%span.publication=c.publication.name

/ Volume
%span.volume="#{c.volume}"

/ Issue
%span.issue="(#{c.issue}), "

/ Pages
%span.pages="#{c.start_page}-#{c.end_page}."
