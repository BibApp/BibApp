-#Add Keywords field, with Auto-Complete
-# Also adds a list of existing Keywords
#keywords_field
  %label Keyword(s):
  = text_field_with_auto_complete :keyword, :name, {}, {:method => :get, :skip_style => true, :frequency => 0.5} 
  = link_to_remote "Add Keyword to List", :url => { :action => :add_item_to_list}, :condition => "$('keyword_name').value.length > 0", :with => "'item_name=keywords&item_value='+$F('keyword_name')+'&clear_field=keyword_name'"
  %ul#keywords_list
    -#Check for @keywords instance variable, in case of errors
    -#Also check if this Work already has Author WorkNameStrings assigned
    - if @keywords
      - @keywords.each do |name|
        = render :partial => 'list_item', :locals => {:item_name => 'keywords', :item_value => name, :selected => true}
    - elsif @work.keywords
      - @work.keywords.each do |kw|
        = render :partial => 'list_item', :locals => {:item_name => 'keywords', :item_value => kw.name, :selected => true}