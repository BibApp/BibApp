- include_stylesheet('specific/works/_local_authors')
- if @work.people.size > 0
  .right_box_no_border
    .box_heading #{$UNIVERSITY_SHORT_NAME} Authors
    %ol.people
      -@work.people.each do |person|
        %li.inline.no-padding-or-margin
          .span-3.person-image
            = link_to(image_tag(person.image_url, :size => "75x100", :alt => person.display_name, :title => person.display_name), person_path(person))
            .text-center
              %strong #{ person.works.verified.size}
              %h7.h7 #{link_to person.last_name, person_path(person)}