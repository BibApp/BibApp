#change_type.right
  = form_for @work, :url => change_type_work_url(@work), :html => {:method => :put} do |form|
    %label #{t '.label'}
    %select{:name => 'type'}
      - Work.types.each do |t|
        - klass = Work.type_to_class(t)
        %option{:value => "#{klass}", :selected => selected_if_equal(klass, @work.class)} #{t}
    = form.submit t('app.go')