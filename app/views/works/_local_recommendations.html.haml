- include_stylesheet('specific/works/_local_recommendations')
- if @recommendations.size > 0
  .right_box
    .box_heading #{t '.heading', :university_name => $UNIVERSITY_SHORT_NAME}
    %ul.recommendations
      - @recommendations.each do |rec|
        %li
          %p.metadata #{link_to rec.title_primary.titleize, work_path(rec)}
          %p.metadata
            - if rec.publication.present?
              #{rec.publication.authority.name} |
            - if rec.publication_date
              #{rec.publication_date.year}