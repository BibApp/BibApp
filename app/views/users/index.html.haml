= render :layout => '/layouts/main_body', :locals => {:header => 'Users'} do

  = render :partial => "shared/alpha_pagination"

  %table#users.prepend-1
    %tr
      %th.span-6 Email
      %th.span-8.last Roles
    -@current_objects.each do |user|
      %tr{:class => cycle("odd", "even")}
        %td=link_to user.email, user_path(user)
        %td
          %ul
            - user.roles.each do |role|
              - if displayable_role(role)
                %li=role.description

  %br/
  %br/
  = render :partial => "shared/alpha_pagination"