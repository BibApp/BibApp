%p=link_to "Return to Publisher List", publishers_url
%h2
  = @publisher.name
  %span=link_to "Edit", edit_admin_publisher_path(@publisher)

%div{:class => "column span-24"}
  %div{:class => "column span-16"}
    %h3="Citations (#{@citations.total_entries})"
    %ol.citations
      = will_paginate @citations
      - @citations.each do |citation|
        = render :partial => "shared/citation", :locals => { :citation => citation }
        
  #facets{:class => "column span-6 prepend-2 last"}
    %div{:class => "column span-4"}
      - if @publisher.authority_for.size > 0
        %h3="Authority for (#{@publisher.authority_for.size})"
        %ul.authority-children
          - @publisher.authority_for.each do |auth|
            %li=link_to auth.name, publisher_path(auth)
      - else
        %h3 Authorized Title
        %p=link_to @publisher.authority.name, publisher_path(@publisher.authority)
      