- authority_form_item = Publisher.find(authority_form_item)
%tr.publisher{:id => "#{authority_form_item.id}", :class => "#{cycle("odd", "even")} authority_option"}
  =hidden_field_tag "pub_ids[]", authority_form_item.id
  %td=radio_button_tag "auth_id", authority_form_item.id
  %td=link_to "#{authority_form_item.authority.name}", edit_publisher_path(authority_form_item)
  %td=authority_form_item.publisher_source.name unless authority_form_item.publisher_source.nil?
  %td=authority_form_item.publications.length
  %td=link_to 'remove', url_for(:action => :remove_from_box, :rem_pa => authority_form_item.id, :page => page)
