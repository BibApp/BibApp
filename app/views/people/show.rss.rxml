xml.instruct!
xml.rss "version" => 2.0, "xmlns:dc" => "http://purl.org/dc/elements/1.1" do
  xml.channel do
    xml.title 'Feed for ' + @person.name
    xml.link url_for(:only_path => false,
                      :controller => 'people',
                      :action => 'show',
                      :id => @person.id)
    xml.image h($APPLICATION_URL + @person.image_url)
    xml.description h("My latest scholarly work")
    @person.works.verified.first(10).each do |work|
      xml.item do
        xml.title work.title_primary
        xml.description work.to_apa
        xml.link url_for(:only_path => false,
                         :controller => 'works',
                         :action => 'show',
                         :id => work.id)
        xml.pubDate work.publication_date.year
        xml.guid url_for(:only_path => false,
                         :controller => 'works',
                         :action => 'show',
                         :id => work.id)
        xml.author h(@person.name)
      end
    end
  end
end