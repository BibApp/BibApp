- if current_user_role?("admin", @person)
  = render :layout => 'layouts/admin_bar' do
    %li= link_to t('.delete'), person_url(@person), :method => :delete, :confirm => t('.confirm')
    %li= link_to t('.add'), new_person_path

= render :layout => 'layouts/main_body', :locals => {:header => edit_header(@person)} do
  = render "shared/local_nav", :object => "person", :state => "edit"

  = render 'form'
