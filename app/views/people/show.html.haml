%div{:class => "column span-24"}
  %h2="#{@person.first_last}"
  %p.edit_person_actions
    %strong
      Edit: 
    = link_to @person.first_last, edit_person_path
    | 
    = link_to "Groups", {:controller => "memberships", :action => "new", :params => {"person_id", @person.id}}
    | 
    = link_to "Pen Names", {:controller => "pen_names", :action => "new", :params => {"person_id", @person.id}}
    
  %p= @person.research_focus

  %div{:class => "column span-16"}
    %h3
      Citations (
      %span#contributorship_total_entries
        = @contributorships.total_entries
      )
      = link_to 'Add', new_citation_path

    = will_paginate @contributorships
    
    %div#citations
      - @contributorships.each do |c|
        %div{:id => "contributorship_id-#{c.id}", :class => "span-15", :style => "border-top: 1px dotted #CCC; margin-top:1em; padding-top:2em"}
          %div{:class => "span-10"}
            = render :partial => "shared/citation", :locals => {:citation => c.citation, :id => c.id }
          %div{:class => "prepend-2 span-3 last"}
            %div{:id => "contributorship_admin-#{c.id}", :class => "span-3"}
              - if c.contributorship_state_id == 2
                %p
                  %strong Verified!
              - else
                %div{:class => "span-3"}
                  %strong Score
                %div{:class => "span-3 big-number contributorship_score", :id => "contributorship_score-#{c.id}"}
                  = c.score
                %div{:class => "span-3"}
                  ="#{pluralize(c.possibilities, "possible")}"
                %div{:class => "span-3"}
                  ="#{pluralize(c.candidates, "candidate")}"
                %div{:class => "span-3"}
                  = render :partial => "shared/contribution_actions", :locals => {:contribution => c}




  %div{:class => "column span-6 prepend-2 last"}
    %h3="Groups (#{@person.groups.size})"
    %ol.groups_alphabetical
      - @person.groups.each do |g|
        %li=link_to "#{g.name}", group_path(g)

    %h3="Pen Names (#{@person.name_strings.size})"
    %ol.name_strings_alphabetical
      - @person.name_strings.each do |ns|
        %li=link_to "#{ns.name}", name_string_path(ns)