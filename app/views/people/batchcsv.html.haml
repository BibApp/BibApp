/ === batch_process ===

- results = params[:completed]
%div.span-24#admin-actions

%div.span-24

%div.span-22.prepend-1

  - form_for :person, 'whather', :url => {:controller => "person", :action => "batchcsv"}, :html => {:class=>"work_form", :method => :post, :multipart => true} do |form|
    %fieldset.span-15

      - unless results.nil? || results.empty?
        %legend CSV Upload
        %p="#{results}"
        
      - else
        %legend Select a comma delimited file
        %p="Select a CSV Comma delimited file for batch processing."

        %ul
          %li
            = form.label :import_file, "Upload File:"
            = form.file_field :import_file, :class=>'text'
            - if @person
              = hidden_field_tag :person_id, @person.id

        %p.buttons
          = submit_tag "Add Batch", :disable_with => "Importing Batch..."