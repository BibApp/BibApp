#sidebar
  = render :partial => "people/vcard", :locals => { :person => @person }
#content
  %h3 Group Memberships:

  %ol#current
    = render :partial => "group", :collection => @person.groups(true), :locals => {:selected => true}
  
  - remote_form_for :group, Group.new, :url => {:action => :create_group }, :method => :post do |form|
    = form.text_field :name, :size => 20
    = hidden_field_tag :person_id, @person.id
    = submit_tag "Add"
  
  %ol#inactive
    = render :partial => "group", :collection => @person.groups_not, :locals => {:selected => false}