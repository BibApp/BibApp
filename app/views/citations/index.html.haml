      / Groups
      %div{:class => "span-5"}
        %h3.heading=link_to "Groups", groups_url
        %ol.groups.facets
          -@facets[:group_id].each do |g|
            - group = object_by_facet_id(g.name)
            %li
              =link_to group.name, group_path(group)
              ="(#{g.value})"
