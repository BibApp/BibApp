  / Citations        
  %div{:class => "span-6 last"}
    %h3.heading=link_to "Citations", citations_url
    
    %ol.citations.facets
      - counter = 0
      - @docs.each do |doc, score|
        - counter = counter + 1
        - if counter < 6
          %li{:style => "border-bottom:1px dotted #000; margin-bottom:1em;"}
            =link_to "#{doc.title_primary}", citation_path(doc)
            %p.metadata 
              - doc.name_strings.each do |ns|
                =link_to "#{ns.name}", name_string_path(ns), {:class => "name_string"}
              ="(#{doc.publication_date.year})"
              %br/
              =link_to "#{doc.publication.name}", publication_path(doc.publication.to_param), {:class => "source"}
              = "#{doc.volume}(#{doc.issue}), #{doc.start_page}-#{doc.end_page}."

      %li=link_to "More...", citations_path