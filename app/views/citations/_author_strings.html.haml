#authors_field
  %label Author(s):
  = text_field_with_auto_complete :author, :name, {}, {:method => :get, :skip_style => true, :frequency => 0.5} 
  = link_to_remote "Add Author to List", :url => { :action => :add_author_to_list}, :condition => "$('author_name').value.length > 0", :with => "'author_string='+$F('author_name')"
  %ul#author_list
    - if @author_strings
      - @author_strings.each do |as|
        = render :partial => 'author_string', :locals => {:author_string => as.name, :selected => true}