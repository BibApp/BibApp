%fieldset
  %legend Book Whole

  = render :partial => 'author_name_strings'

  = render :partial => 'editor_name_strings'

  %p
    %label Publication Date:
    = date_select 'citation', 'publication_date', :start_year => 1950
    -#= form.text_field :year, :size => 4
  %p
    %label Book Title*:
    = form.text_field :title_primary, :size => 40
  %p
    %label Publisher:
    = form.collection_select :publisher_id, @publisher_authorities, :id, :name
    = hidden_field_tag :type, 'BookWhole'
  %p.submit
    = submit_tag :save