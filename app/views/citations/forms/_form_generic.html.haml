%fieldset
  %legend Generic

  = render :partial => 'author_name_strings'
 
  %p
    %label Publication Date:
    = date_select 'citation', 'publication_date', :start_year => 1950

  %p
    %label Title*:
    = form.text_field :title_primary, :size => 40
    
  = render :partial => 'keywords'

  %p
    %label Abstract:
    %br/
    = form.text_area :abstract 

  = hidden_field_tag :type, 'Generic'

  %p.submit
    = submit_tag :save