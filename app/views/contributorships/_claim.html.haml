%div{:id => "contributorship_id-#{claim.id}", :class => "span-13", :style => "border-top: 1px dotted #CCC; margin-top:1em; padding-top:2em"}
  %div{:class => "span-9"}
    %h3=claim.person.name
    %div{:class => "span-3"}
      = image_tag(claim.person.image_url, {:height => "100px"})
    %div{:class => "span-5"}
      %h4 Groups
      %ul
        - claim.person.groups.each do |g|
          %li=g.name
      
  %div{:class => "prepend-1 span-3 last"}
    %div{:id => "contributorship_admin-#{claim.id}", :class => "span-3"}
      - if claim.verified?
        %p
          %strong Verified!
      - else
        %div{:class => "span-3"}
          %strong Certainty
        %div{:class => "span-3 big-number contributorship_score", :id => "contributorship_score-#{claim.id}"}
          = claim.score
        %div{:class => "span-3"}
          ="#{pluralize(claim.possibilities, "possible")}"
        %div{:class => "span-3"}
          ="#{pluralize(claim.candidates, "candidate")}"
        %div{:class => "span-3"}
          %ul{:id => "contributorship_actions-#{claim.id}", :class => "contributorship_actions_list"}
            %li{:class => "inline"}=link_to("Verify", verify_contributorship_path(claim.id), :method => :put)
            |
            %li{:class => "inline"}=link_to("Deny", deny_contributorship_path(claim.id), :method => :put)