- include_data_tables
- include_javascript('specific/publications/authorities')

- if current_user_any_role?("editor", "Group")
  = render :layout => 'layouts/admin_bar' do
    %li #{link_to t('common.publications.new'), new_publication_path}

= render :layout => 'layouts/main_body', :locals => {:header => t('common.publications.authority')} do
  #authority_form
    %p #{t('publications.authorities.instructions_html')}
    = render "authority_form", :authorities => @pas, :page => @page

  = render "shared/alpha_pagination"

  = render 'authorities_table'

  %br/
  %br/
  = render "shared/alpha_pagination"
