/ === Group === Show ===
/ Main
%div{:class => "column span-24"}

  %div{:class => "span-22 prepend-1"}
    %h2= @group.name
    
  %div{:class => "span-16 prepend-1"}
    %h3 People
    %ol.people-alphabetical
      - @group.people.each do |p|
        - if p.image_url
          - # Do nothing
          = link_to(image_tag(p.image_url, :size => "35x50", :alt => p.name, :title => p.name), person_path(p))
        - else
          =image_tag "man.jpg", :size => "35x50"

    / Left - Publications
    %div{:class => "span-7", :style => "padding-top:2em"}
      %h3.heading=link_to "Publications", publications_url
      %ol.publications
        -@facets[:publications].each do |p|
          %li
            =link_to "#{p.name}", publication_path(Publication.find_by_name(p.name).to_param)
            = "(#{p.value})"

    / Middle - Publishers
    %div{:class => "span-7", :style => "padding-top:2em"}
      %h3.heading=link_to "Publishers", publishers_url
      %ol.publishers
        -@facets[:publishers].each do |p|
          %li
            =link_to "#{p.name}", publisher_path(Publisher.find_by_name(p.name).to_param)
            = "(#{p.value})"

  / Right - Citations
  %div{:class => "span-6 last"}    
    %h3="Citations (#{@q.total_hits})"
    - if !@filter.empty?
      %h4
        ="Remove Filters: "
      - @filter.each do |f|
        =remove_filter(@query,@filter,f)
    %ol.citations
      - @docs.each do |doc, score|
        %li
          =link_to "#{doc.title_primary}", citation_path(doc)
          %p 
            %strong NameStings:
            - doc.name_strings.each do |ns|
              =link_to "#{ns.name}", name_string_path(ns)
            %br/
            %strong Source:
            =link_to "#{doc.publication.authority.name}", publication_path(doc.publication.authority.to_param)
            = "#{doc.volume}(#{doc.issue}), #{doc.start_page}-#{doc.end_page}."
            %br/
            %strong Year:
            -if doc.publication_date != nil
              ="#{doc.publication_date.year}"
            = #render :partial => "shared/coins", :locals => {:citation => doc}
