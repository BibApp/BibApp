!!! Strict
%html{ :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=utf-8'}/
    = stylesheet_link_tag 'citation'
    = stylesheet_link_tag 'layout'
    = stylesheet_link_tag 'niftyCorners'
    = stylesheet_link_tag 'pretty'
    = stylesheet_link_tag 'print', :media => 'print'
    = javascript_include_tag :defaults
    = javascript_include_tag 'mochikit/MochiKit.js'
    = javascript_include_tag 'plotkit/Base.js'
    = javascript_include_tag 'plotkit/Layout.js'
    = javascript_include_tag 'plotkit/Canvas.js'
    = javascript_include_tag 'plotkit/SweetCanvas.js'
    = javascript_include_tag 'niftycube.js'
    = javascript_include_tag 'scriptaculous'
    = javascript_include_tag 'slider'
    - if (@rss_feeds)
      - @rss_feeds.each do |feed|
        = auto_discovery_link_tag( :rss, { :controller => feed[:controller], :action => feed[:action], :id => feed[:id] })
    %title= "UW BibApp"
  %body
    #wrapper
      = render :partial => 'shared/header'
      #main
        = yield
      = render :partial => 'shared/footer'
      %br.clear/
