%div{:class => "vcard span-8"}
  %div{:class => "span-3"}
    - if !o.image_url.nil?
      - # Do nothing
      = image_tag(o.image_url)
    - else
      %img{:src => "/images/man.jpg"}
    %div.upload_link
      -# If image already exists, we want to edit existing one!
      - if !o.image_url.nil?
        = link_to "change image", {:controller => "attachments", :action => "edit", :params => {"asset_id" => o.id, "asset_type" => o.class.name.to_s, "type" => "Image", "id" => o.image.id}}
      - else
        = link_to "change image", {:controller => "attachments", :action => "new", :params => {"asset_id" => o.id, "asset_type" => o.class.name.to_s, "type" => "Image"}}
  %a{:class => "fn url hide", :href => ""}
    =o.name
  %div{:class => "adr"}
    %span{:class => "work"}
    %div{:class => "street-address"}
      =o.office_address_line_one
    %span{:class => "locality"}
      =o.office_city
    %span{:class => "region"}
      =o.office_state
    %span{:class => "postal-code"}
      =o.office_zip
  - if o.phone
    %div{:class => "tel"}
      %span{:class => "type hide"} Work
      = o.phone
  - if o.email
    %div{:class => "email"}
      %span{:class => "type hide"} Work
      %a{:href => "mailto:#{o.email}"}
        = o.email
    
  