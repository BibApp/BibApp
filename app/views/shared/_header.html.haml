#main
  #header{:class => "span-24"}
    %div{:class => "span-23 prepend-1"}
      %div{:class => "span-1", :style => "padding-right:1.5em"}
        - if $LOGO and $LOGO_ALT_TEXT
          %img{:src => "#{image_path($LOGO)}", :alt => "#{$LOGO_ALT_TEXT}"}

      %div{:class => "span-21"}
        %div{:class => "span-10"}
          %h1=link_to $APPLICATION_NAME, citations_url
        %div{:class => "span-9 prepend-2 last"}
          %ul{:class => "global-nav"}
            %li
              %a{:href => "#{$UNIVERSITY_URL}"}=$UNIVERSITY_SHORT_NAME
            %li
              %a{:href => "faq"} FAQ
            %li
              %a{:href => "login"} Login
      %div{:class => "span-21"}
        %div{:class => "span-10"}
          %p#tagline
            ="We're putting "
            %strong="#{archivable_count} papers"
            online, for free.
            %strong="This is true."
        %div{:class => "span-9 prepend-2 last"}
          %strong#search Find an Expert:
          - form_tag search_url, :method => :get, :class => "header-search-form" do
            = text_field_tag(:q, value = nil, options = {})
            = submit_tag 'Go'
