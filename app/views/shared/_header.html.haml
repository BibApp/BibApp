#header.span-24
  .span-23.prepend-1
    
    .span-12
      =link_to(image_tag($APPLICATION_LOGO, :alt => $APPLICATION_NAME), works_path)
    
    .span-7.prepend-3.last
      - form_tag search_path, :method => :get, :class => "header-search-form" do
        #search-box
          = text_field_tag(:q, value = nil, options = {:size => 21})
          = submit_tag 'Search'
        %span{:style => "font-size:x-small;clear:both;float:right;"}=link_to "Advanced", advanced_search_path
    
    .span-22
      %p#tagline
        ="#{$APPLICATION_TAGLINE}"
    
    .span-16
      %ul#navigation
        - if logged_in?
          - if current_user.has_role?("admin", System)
            %li{mark_current_if_controller_is("admin")}
              %span=link_to "Admin", admin_index_url
            
        %li{mark_current_if_controller_is("works")}
          %span=link_to "Works", works_path(:view => "all")
        
        %li{mark_current_if_controller_is("groups")}
          %span=link_to "Groups", groups_path

        %li{mark_current_if_controller_is('people')}
          %span=link_to "People", people_path

        %li{mark_current_if_controller_is('publications')}
          %span=link_to "Publications", publications_path

        %li{mark_current_if_controller_is('publishers')}
          %span=link_to "Publishers", publishers_path

        - if !session[:saved].nil? && session[:saved].items.size > 0
          %li
            %span=link_to "Saved (#{session[:saved].items.size})", saved_path

    .span-6.last
      %ul#global-nav
        %li
          %a{:href => "/about"} About
        %li
          %a{:href => "/faq"} FAQ
        - if logged_in?
          %li
            %span=link_to "Account", edit_user_path(current_user)
          %li
            %span=link_to "Logout", logout_path
        - else
          %li
            %span=link_to "Login | Sign Up", login_path