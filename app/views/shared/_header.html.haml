#header{:class => "span-24"}
  %div{:class => "span-23 prepend-1"}
    
    %div{:class => "span-10"}
      =link_to(image_tag($APPLICATION_LOGO, :alt => $APPLICATION_NAME), works_path)
    
    %div{:class => "span-9 prepend-3 last"}
      %ul#global-nav
        %li
          %a{:href => "about"} About
        %li
          %a{:href => "faq"} FAQ
        - if logged_in?
          %li=link_to "Welcome: #{current_user.login}", edit_user_path(current_user)
          %li=link_to "Logout", logout_path
        - else
          %li=link_to "Login", login_path
    
    %div{:class => "span-22"}
      %p#tagline
        ="#{$APPLICATION_TAGLINE}"
    
    %div{:class => "span-12"}
      %ul#navigation
        - if logged_in?
          - if current_user.has_role?("admin", System)
            - if params['controller'] == "admin"
              %li#current=link_to "Admin", {:controller => "admin", :action => "index"}
            - else
              %li=link_to "Admin", {:controller => "admin", :action => "index"}

        - if params['controller'] == "groups"  
          %li#current=link_to "Groups", groups_path
        - else
          %li=link_to "Groups", groups_path

        - if params['controller'] == "people"
          %li#current=link_to "People", people_path
        - else
          %li=link_to "People", people_path

        - if params['controller'] == "publications"
          %li#current=link_to "Publications", publications_path
        - else
          %li=link_to "Publications", publications_path

        - if params['controller'] == "publishers"
          %li#current=link_to "Publishers", publishers_path
        - else
          %li=link_to "Publishers", publishers_path
          
        - if !session[:cart].nil? && session[:cart].items.size > 0
          %li=link_to "Cart (#{session[:cart].items.size})", cart_path

    %div{:class => "span-10 last"}
      - form_tag search_path, :method => :get, :class => "header-search-form" do

        %div#search-box
          = text_field_tag(:q, value = nil, options = {:size => 21})
          = submit_tag 'Search'
          %span{:style => "font-size:x-small"}=link_to "Advanced", advanced_search_path