%div#facets{:class => "span-6 append-1"}
  %h3#filter Filters
  - if !@filter.empty?
    %ol.filters
      - @filter.each do |f|
        %li.active-filter=remove_filter(@query,@sort,@filter,f)

  / Groups
  %h4.heading Groups
  %ol#top-five-groups.filters.groups
    -@facets[:groups].first(5).each do |p|
      %li
        =add_filter(@query,@sort,@filter,"year_facet",p.name,p.value)

  - if @facets[:groups].size > 5
    %ol#all-groups.filters.groups{:style => "display:none"}
      -@facets[:groups].each do |p|
        %li.show
          =add_filter(@query,@sort,@filter,"year_facet",p.name,p.value)

    =link_to_function "More Groups", "$('all-groups').show(); $('top-five-groups').hide(); this.hide();"

