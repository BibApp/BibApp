/ Filters
- if !@filter.empty?
  %h4
    ="Remove Filters: "
    - @filter.each do |f|
      =remove_filter(@query,@sort,@filter,f)

/ Groups
%div{:class => "span-4"}
  %h4.heading Groups
  %ol.groups
    -@facets[:groups].each do |p|
      %li
        =add_filter(@query,@sort,@filter,"year_facet",p.name,p.value)

/ People
%div{:class => "span-5 last"}
  %h4.heading People
  %ol.years
    -@facets[:people].each do |p|
      %li
        =add_filter(@query,@sort,@filter,"year_facet",p.name,p.value)
%hr/

